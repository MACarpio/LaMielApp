@{
    ViewData["Title"] = "Home Page";
}

<div class="carrusel mb-2">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner ">
        <div class="carousel-item active carrusel-container">
          <img class="img-cover" src="/img/Pastel1.jpg" alt="Torta1" >
        </div>
        <div class="carousel-item carrusel-container">
          <img class="img-cover" src="/img/Pastel2.jpg" alt="Torta2" >
        </div>
        <div class="carousel-item carrusel-container">
          <img class="img-cover" src="/img/Pastel3.jpg" alt="Torta3" >
        </div>
      </div>
